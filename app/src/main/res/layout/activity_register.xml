<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registraionbg"
    tools:context=".Register">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="230dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/btn"
            android:elevation="5dp"
            android:hint=" Email"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:textColorHint="@color/fullwhite" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="230dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:elevation="5dp"
            android:hint=" Password "
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:textColorHint="@color/fullwhite" />

        <EditText
            android:id="@+id/txt_ConfirmPassword"
            android:layout_width="230dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:elevation="5dp"
            android:hint="   Confirm Password "
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/fullwhite" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/joinbtn"
            android:text="Join Us"
            android:textAllCaps="false"
            android:textColor="@color/whitecolor" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:onClick="loginpage"
            android:text="Already have an account.Login here"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

        <TextView

            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Don't worry will will keep your data safe..."
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />



        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:focusable="true"
            android:visibility="visible" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>